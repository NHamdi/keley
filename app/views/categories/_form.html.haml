= form_for(@category) do |f|
  - if @category.errors.any?
    %div#error_explanation
      %h2
        = pluralize(@category.errors.count, "error") +  "prohibited this todo_list from being saved:"

      %ul
        - @category.errors.full_messages.each do |message|
          %li
            = message
    %div

  %div.field
    = f.label :name
    %br
    = f.text_field :name
  %div.field
    = f.label :description
    %br
    = f.text_area :description

  %div.actions
    = f.submit