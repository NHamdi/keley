= form_for(@product) do |f|
  - if @product.errors.any?
    %div#error_explanation
      %h2
        = pluralize(@product.errors.count, "error") +  "prohibited this todo_list from being saved:"

      %ul
        - @product.errors.full_messages.each do |message|
          %li
            = message
    %div

  %div.field
    = f.label :name
    %br
    = f.text_field :name
  %div.field
    = f.label :description
    %br
    = f.text_area :description

  %div.field
    = f.label :price
    %br
    = f.number_field :price

  %div.field
    = f.label :weight
    %br
    = f.number_field :weight

  %div.actions
    = f.submit
